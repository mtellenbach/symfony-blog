{% extends 'base.html.twig' %}

{% block title %}Blog von Michael Tellenbach!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ post.title }}</h1>
    <p>Erstellt von: {{ post.user.firstName ~ ' ' ~ post.user.lastName }}</p>
    {{ post.text | nl2br }}

    <hr>

    <h2>Kommentare</h2>
    {% for comment in post.comments %}
        <div>
            <h3>{{ comment.title }}</h3>
            <p>Erstellt von: {{ comment.author }}</p>
            <p>{{ comment.text }}</p>
        </div>
    {% endfor %}
</div>
{% endblock %}
